<%= form_with(model: tanque, local: true) do |form| %>
  <% if tanque.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tanque.errors.count, "error") %> error al tratar de guardar este tanque:</h2>

      <ul>
      <% tanque.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label :caracteristicas %>
    <%= form.text_area :caracteristicas %>
  </div>

  <div class="actions">
    <%= form.submit "Crear Tanque" %>
  </div>
<% end %>
